<h1>Update Child</h1>

<h3>Update <%= @piece.name %>:</h3>

<%= form_with url: "/pieces/#{@piece.id}", method: :patch, local: true do |f| %>
  <%= f.label :name, "Name of Piece:" %>
  <%= f.text_field :name, value: "#{@piece.name}", required: true %>
  <br><br>

  <%= f.label :artist, "Artist:" %>
  <%= f.text_field :artist, value: "#{@piece.artist}", required: true %>
  <br><br>

  <%= f.label :year, "Year Created:" %>
  <%= f.number_field :year, max: "2021", step: 1, value: "#{@piece.year}", required: true %>
  <br><br>

  <p>Currently Marked As:
    <% if @piece.original == true %>
      Original
    <% else %>
      Re-Print
    <% end %>
  </p>

  <p>Is it an Original Piece:</p>
  <%= f.radio_button :original, true, id: 'orgtrue' %>
  <%= f.label :original, "Yes", checked: true, required: true %>

  <%= f.radio_button :original, false, id: 'orgfalse' %>
  <%= f.label :original, "Other", required: true %>
  <br><br>

  <%= f.submit "Submit" %>
<% end %>

<nav>
  <a href="/pieces">Art Pieces</a>
  <a href="/galleries">Galleries</a>
</nav><br>


<h3>Add New Piece to <%= @gallery.name %>:</h3>
<%= form_with url: "/galleries/#{@gallery.id}/pieces", method: :post, local: true do |f| %>
  <%= f.label :name, "Name of Piece:" %>
  <%= f.text_field :name, placeholder: "Mona Lisa", required: true %>
  <br><br>

  <%= f.label :artist, "Artist:" %>
  <%= f.text_field :artist, placeholder: "Leonardo DaVinci", required: true %>
  <br><br>

  <%= f.label :year, "Year Created:" %>
  <%= f.number_field :year, max: "2021", step: 1, placeholder: "1553", required: true %>
  <br><br>

  <p>Is it an Original Piece:</p>
  <%= f.radio_button :original, true, id: 'orgtrue' %>
  <%= f.label :original, "Original", checked: true, required: true %>

  <%= f.radio_button :original, false, id: 'orgfalse' %>
  <%= f.label :original, "Other", required: true %>
  <br><br>

  <%= f.submit "Submit" %>
<% end %>

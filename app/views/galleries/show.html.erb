<nav>
  <%= link_to 'Art Pieces', "/pieces" %>
  <%= link_to 'Galleries', "/galleries" %>
  <%= link_to 'Current Exhibition', "/galleries/#{@gallery.id}/pieces" %>
</nav><br>

<h1><%= @gallery.name %></h1>
<%= button_to "Edit Gallery Info", "/galleries/#{@gallery.id}/edit", method: :get %>
<br>
<%= button_to "Delete", "/galleries/#{@gallery.id}", method: :delete, data: {confirm: "Really delete the gallery?"} %>

<ul>
<li>NPO Status:
<% if @gallery.non_profit == true %>
    Non-Profit
<% else %>
    Private
<% end %>
</li>

<li>Cost of Entry: $<%= @gallery.entry_cost %> </li>

<li>Number of Pieces: <%= @gallery.total_pieces %> </li>
</ul>
